#!/bin/bash

donar () {
			 bot_retorno="$LINE\n"
			 bot_retorno+="        ‚ö†Ô∏è TENDRAS ACCESO ILIMITADO ‚ö†Ô∏è \n          üö´ INCLUIDO TU RESELLER EN LA KEY üö´"
			 bot_retorno+=" ùô¥ùöúùöùùöé ùôøùöõùöòùö¢ùöéùöåùöùùöò, ùöóùöéùöåùöéùöúùöíùöùùöä ùöäùö¢ùöûùöçùöä ùöôùöäùöõùöä ùô¥ùöüùöòùöïùöûùöåùöíùöòùöóùöäùöõ\n"
			 bot_retorno+="          ùôéùôû ùôôùôöùô®ùôöùôñùô® ùôçùôöùôñùô°ùôûùôØùôñùôß ùô™ùô£ùôñ ùòøùô§ùô£ùôñùôòùôûùô§ùô£\n"
			 bot_retorno+="                     ùôãùôñùôÆùô•ùôñùô°\n"
			 bot_retorno+="            PAGO BTC - CRIPTOMONEDA\n"
			 bot_retorno+="$LINE\n"
			 bot_retorno+=" Desde ya muchas gracias\n"
			 bot_retorno+="$LINE\n"
			 msj_fun 
			 #msj_donar
}

donar_OnOff () {
if [[ ! -e "/etc/donar_active.txt" ]]; then
	echo "on" > /etc/donar_active.txt
	local bot_retorno="$LINE\n"
          bot_retorno+="MENSAJE DONATIVO : <u>ENCENDIDO</u> ‚úÖ\n"
	  bot_retorno+="$LINE\n"
	msj_fun
else
	rm -rf /etc/donar_active.txt
	local bot_retorno="$LINE\n"
          bot_retorno+="MENSAJE DONATIVO: <u>APAGADO</u> ‚ùå\n"
	  bot_retorno+="$LINE\n"
	msj_fun
fi
}
